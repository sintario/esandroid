<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/postlist"
        android:name="com.tetsuyanh.esandroid.fragment.PostListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPostListBg"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.tetsuyanh.esandroid.fragment.PostListFragment"
        tools:listitem="@layout/fragment_post" />

    <TextView
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/colorPostListBg"
        android:text="@string/no_data_available"
        android:visibility="gone" />
</FrameLayout>